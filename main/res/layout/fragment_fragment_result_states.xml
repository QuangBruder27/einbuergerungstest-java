<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_bestanden_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:rotation="18"
        android:src="@drawable/bestanden" />

    <ImageView
        android:id="@+id/id_passport_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/pass" />

    <TextView
        android:id="@+id/id_text_result_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_bestanden_states"
        android:gravity="center_horizontal"
        android:text="Bạn vừa đạt được 30 câu trong 2 phút"
        android:textSize="16dp" />

</RelativeLayout>
